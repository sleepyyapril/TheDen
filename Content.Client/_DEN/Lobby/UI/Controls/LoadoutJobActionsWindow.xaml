<ui:FancyWindow xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:Content.Client.UserInterface.Controls"
    SetSize="400 600"
    Title="{Loc 'loadout-job-actions-window-title'}">
    <BoxContainer HorizontalExpand="True" VerticalExpand="True" Orientation="Vertical">
        <BoxContainer Name="LabelContainer" SetHeight="5" HorizontalExpand="True" Orientation="Horizontal" Visible="False" Margin="10 10 10 30">
            <RichTextLabel Text="{Loc 'loadout-job-actions-window-disclaimer-start'}" SetSize="150 10"/>
            <Control HorizontalExpand="True" />
            <Label Name="EditingLabel" SetHeight="10" HorizontalExpand="True" />
        </BoxContainer>
        <ui:HLine HorizontalExpand="True" SetHeight="10"/>
        <Button Name="CopyTraitsAction" Text="{Loc 'loadout-job-action-copy-traits'}" HorizontalExpand="True" SetHeight="30" Margin="3" />
        <Button Name="CopyLoadoutAction" Text="{Loc 'loadout-job-action-copy-loadout'}" HorizontalExpand="True" SetHeight="30" Margin="3" />
        <Button Name="CopyBothAction" Text="{Loc 'loadout-job-action-copy-both'}" HorizontalExpand="True" SetHeight="30" Margin="3" />
        <Button Name="ToggleEditingAction" Text="{Loc 'loadout-job-action-toggle-edit'}" HorizontalExpand="True" SetHeight="30" Margin="3" />
        <Button Name="DeleteSavedLoadoutAction" Text="{Loc 'loadout-job-action-delete-saved-loadout'}" HorizontalExpand="True" SetHeight="30" Margin="3" />
    </BoxContainer>
</ui:FancyWindow>
